<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="eTheka.App.Windows.AboutWindow"
		Width="400"
		Height="300"
		WindowStartupLocation="CenterOwner"
		CanResize="False"
		Icon="/Assets/eTheka.ico"
        Title="eTheka">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Label Content="eTheka"
			   Grid.Row="0" Grid.ColumnSpan="2"
			   HorizontalAlignment="Center" VerticalAlignment="Center"
			   FontSize="30" FontWeight="DemiBold"/>
		<Image Source="/Assets/eTheka.png"
			   Grid.Row="1" Grid.ColumnSpan="2"/>
		<TextBlock Grid.ColumnSpan="2" Grid.Row="2"
				   HorizontalAlignment="Center" VerticalAlignment="Center">
			Created by Juraj Dončević
		</TextBlock>
	</Grid>
</Window>
